{
    "editor.fontSize": 12,
    "editor.insertSpaces": false,
    "go.formatTool": "goimports",
    "workbench.iconTheme": "file-icons",
    "keyboard.dispatch": "keyCode",
    "go.useLanguageServer": true,
    "vim.useCtrlKeys": false,
    "editor.fontFamily": "'DejaVu Sans Mono', 'monospace'",
    "editor.scrollBeyondLastColumn": 1,
    "editor.scrollBeyondLastLine": false,
    "vs-kubernetes": {
        "vscode-kubernetes.kubectl-path.linux": "/home/b-con/.vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.helm-path.linux": "/home/b-con/.vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.minikube-path.linux": "/home/b-con/.vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    "C_Cpp.updateChannel": "Insiders",
    "html.autoClosingTags": false,
    "explorer.confirmDelete": false,
    "editor.minimap.showSlider": "always",
    "explorer.confirmDragAndDrop": false,
    "[markdown]": {
        "editor.wordWrapColumn": 80,
        "editor.wordWrap": "bounded",
        "editor.rulers": [80]
